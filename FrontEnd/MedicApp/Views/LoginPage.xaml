<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="MedicApp.Views.LoginPage"
             Title="LoginPage">
    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="logo.jpeg"/>
        <Grid Background="#4F3F9B" Opacity=".9"/>
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit"
                   HeightRequest="120"
                   Source="applogo.png"/>
            <skia:SKLottieView Grid.Column="1"
                               HeightRequest="100"
                               RepeatCount="-1"
                               Source="initialanimation.json"/>
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                       FontFamily="bold"
                       FontSize="Medium"
                       Text="Welcome to MedicApp"/>
                <Label
                    FontFamily="medium"
                    Text="Log in to continue"
                    TextColor="#A3A3A4"/>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                                    CornerRadius="10"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="60"/>
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource 
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf0e0;"
                                Size="44"
                                Color="#4F3F9b"/>
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                           x:Name="EmailEntry"
                           Placeholder="EMAIL"/>
                </Grid>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                    CornerRadius="10"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="60"/>
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource 
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf084;"
                                Size="44"
                                Color="#4F3F9b"/>
                        </Image.Source>
                    </Image>
                    <Entry x:Name="PasswordEntry"
                           Grid.Column="1"
                           IsPassword="True"
                           Placeholder="PASSWORD"/>
                </Grid>
                <Button
                    Margin="0,20,0,0"
                    x:Name="LoginButton" 
                    BackgroundColor="#4F3F9b"
                    HeightRequest="60"
                    Text="Login"
                    TextColor="#FBF6FD"
                    Clicked="LoginButton_Clicked"/>
                <Button
                    Margin="0,20,0,0"
                    x:Name="CreateButton" 
                    BackgroundColor="#FBF6FD"
                    HeightRequest="60"
                    Text="Create your account"
                    TextColor="#4F3F9b"
                    Clicked="CreateButton_Clicked"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>